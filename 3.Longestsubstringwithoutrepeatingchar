class Solution:
    def lengthOfLongestSubstring(self, s: str) -> int:
        n=len(s)
        l=0
        if n==0:
            return 0
        hs=set()
        mlen=-1
        for r in range(n):
            if s[r] in hs:
                while l<r and s[r] in hs:
                    hs.remove(s[l])
                    l+=1
            hs.add(s[r])
            mlen=max(mlen,r-l+1)
        return mlen

        
