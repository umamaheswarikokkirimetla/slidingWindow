class Solution:
    def longestOnes(self, nums: List[int], k: int) -> int:
        l,r=0,0
        n=len(nums)
        maxlen=0
        zeroes=0
        while r<n:
            if nums[r]==0:
                zeroes+=1
            while zeroes>k:
                if nums[l]==0:
                    zeroes-=1
                l+=1
            if zeroes<=k:
                len1=r-l+1
                maxlen=max(maxlen,len1)
            r+=1
        return maxlen





        
